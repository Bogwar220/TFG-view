<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.activities.ListaEjercicios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fat_cat2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDiaName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:background="#58857e"
            android:text="tvDiaName"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvRutinas"
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAtrasList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_weight="1"
                android:background="@drawable/botones"
                android:text="@string/btAtras" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>