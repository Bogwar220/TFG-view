<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".act.activities.ConfigPass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fat_cat2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:background="#58857e"
            android:gravity="center"
            android:text="Cambiar Contrase単a"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etActPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="170dp"
            android:layout_marginRight="50dp"
            android:background="#8dbab3"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Contrase単a Actual"
            android:inputType="textPassword"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etNewPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="#8dbab3"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Nueva Contrase単a"
            android:inputType="textPassword"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/etNewPassConf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="#8dbab3"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Confirmar Nueva Contrase単a"
            android:inputType="textPassword"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btCambiarPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botones"
                android:text="Cambiar" />

            <Button
                android:id="@+id/btAtrasConfigPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botones"
                android:text="@string/btAtras" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>